@model CRMS.Core.ViewModel.TicketCommentViewModel

<style>
    div.comment {
        position: absolute;
        top: 165px;
        right: 140px;
        width: 600px;
    }
</style>
<div class="comment">
    <div class="section" style=" background-color: white;max-width: 450px;">
        <div class="container" style="max-width: 450px;">
            <form id="commentform">
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <h3 style="text-align: center; color:white; background-color: #2C053F">Comment</h3>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.TicketId)
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div>
                        <a onclick="Cancel" class="btn btn-primary">Cancel</a>
                        <input type="submit" value="Post" class="btn btn-success" />
                    </div>
                </div>
            </form>
            @* <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>*@
        </div>
    </div>
</div>
<script>
    $("#commentform").submit(function () {
        var $form = $(this);
        $.ajax({
            type: "POST",
            data: $form.serialize(),
            url: '/Ticket/CreateTicketComment/',
            success: function (res) {
                if (res == "true") {
                    location.reload();
                }
            }
        })
    })

       function Cancel(e) {
           location.reload(e);
    }
</script>
