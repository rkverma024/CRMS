@model IEnumerable<CRMS.Core.Models.TicketAttachment>
@{
    Layout = null;
}

<script src="~/Scripts/bootstrap.min.js"></script>

<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Image List</h3>
        </div>
        <div class="modal-body">
            <form name="Createform" id="showimage">
                <table class="table">                  
                    @{ int count = 0;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @{count += 1; }
                                @count.
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FileName.Split('_')[1])
                            </td>
                            <td>                                
                                <a href="@Url.Action("DownloadImg", "Ticket", new { id = item.Id })" class="btn btn-success"><i class=" glyphicon glyphicon-download-alt"></i></a>                                
                            </td>
                        </tr>
                    }

                </table>
            </form>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>