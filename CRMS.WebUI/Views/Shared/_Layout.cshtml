                                            }
                                        }*@
                                    <a href="#">Profile</a>
                                    <a href="#">Settings</a>
                                    @*<a href="login.html">LogOut</a>*@
                                    <a>@Html.ActionLink("LogOut", "LogOut", "Account")</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="container body-content">
